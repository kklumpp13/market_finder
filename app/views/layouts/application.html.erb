<!DOCTYPE html>
<html>
<head>
  <title>MarketFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<body>

<%# Hide the whitespace device notices automatically create at top %>
<% if alert %>
  <p class="alert">
    <%= alert %>
  </p>
<% elsif notice %>
  <p class="notice">
    <%= notice %>
  </p>
<% end %>

<%# For the header in the devise views %>
<% unless current_page?(root_path) %>
  <%= render 'layouts/header' %>
<% end %>


<%= yield %>

</body>
</html>






