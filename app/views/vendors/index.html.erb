<div class="vendor_category">
  <div class="vendor_heading">
    <ul>
      <li>
        <%= link_to "All", vendors_path %>
      </li>
      <% Product.all.each do |product| %>
      <li>
        <%= link_to product.name, vendors_path(product: product.name) %>
      </li>
      <% end %>
    </ul>
  </div>
</div>


<div id="vendors" class="cf">
   <div class="wrapper">
    <ul class="cf">
      <% @vendors.each do |vendor| %>
        <%= link_to vendor do %>
          <li>
          <%= image_tag vendor.thumbnail.url(:medium) %>  
          <div class="vendor_overview">
            <h2><%= vendor.name %></h2>
          </div>
        </li>
        <% end %>
      <% end %>
    </ul>
    <%#= will_paginate @podcasts, previous_label: "Previous", next_label: "Next" %>

   </div>
 </div>

