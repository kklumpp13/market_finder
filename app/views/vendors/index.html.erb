<div id="banner" class="vendors_banner">

</div>

<p id="notice"><%= notice %></p>



<div class="vendor_category">
  <div class="vendor_heading">
    <li>
      <%= link_to "All", vendors_path %>
    </li>
    <% Product.all.each do |product| %>
    <li>
      <%= link_to product.name, vendors_path(product: product.name) %>
    </li>
    <% end %>
  </div>
</div>

<div class="vendor_listing"></div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Email</th>
      <th>Website</th>
      <th>Facebook</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 
  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.description %></td>
        <td><%= vendor.email %></td>
        <td><%= vendor.website %></td>
        <td><%= vendor.facebook %></td>
        <td><%= vendor.phone %></td>
        <td><%= vendor.twitter %></td>
        <td><%= vendor.instagram %></td>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor', new_vendor_path %>
