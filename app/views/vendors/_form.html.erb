<%= form_for(@vendor) do |f| %>
  <% if @vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% @vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product %><br>
    <%= f.collection_select :product_id, Product.all, :id, :name, {prompt: "Choose a category"} %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br>
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :instagram %><br>
    <%= f.text_field :instagram %>
  </div>
 <div class="field">
    <%= f.label :markets %><br>
    <%#= f.select :markets, options_for_select(Market.all.collect {|market| [market.name, market.id]}, @vendor.markets.collect { |market| market.id }), {multiple: true, size: 5} %>
    <%#= f.collection_select :markets, Market.all, :id, :name, multiple: true %>
    <%= select_tag 'markets', options_from_collection_for_select(Market.all,"id","name"),  :multiple => true, class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date, class:"datepicker" %>
  </div>

  <div class="field">
    <%= f.label :time %><br>
    <%= f.text_field :time, class:"timepicker" %>
  </div>

  <div class="field">
    <%= f.label :thumbnail %><br>
    <%= f.file_field :thumbnail %>
  </div>



  <div class="actions">
    <%= f.submit %><br>
  </div>
<% end %>
